            app:layout_constraintTop_toBottomOf="@+id/opt_2_csl_eT"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/opt_2_time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
