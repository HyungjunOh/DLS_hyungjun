            app:layout_constraintLeft_toRightOf="@+id/opt_2_btn_product"
            app:layout_constraintTop_toBottomOf="@+id/opt_2_date"
            android:layout_marginStart="2dp" />

        <Button
            android:id="@+id/opt_2_btn_product"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="상품 선택"
            app:layout_constraintLeft_toRightOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/opt_2_date"
            android:layout_marginStart="16dp" />

        <ListView
            android:id="@+id/opt_2_nameListView"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-1dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintLeft_toRightOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/opt_2_csl_eT" />

        <TextView
            android:id="@+id/opt_2_cmpN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/opt_2_csl_eT"
            app:layout_constraintTop_toBottomOf="@+id/opt_2_etTitle" />

